.card{
    width: 100%;
    border-radius: 20rpx;
    background-color:#ecf0f1 ;
    border-radius: 20rpx;
    overflow: hidden;
    margin-bottom: 40rpx;
    color: black;
    padding: 0 35rpx;
    padding-bottom: 20rpx;
    box-sizing: border-box;
}
.card .img{
    margin: 0 -35rpx;
    height: 300rpx;
}
.card image {
     width: 100%;
     height: 100%;
}
.title{
    font-size: 30rpx;
    font-weight: 600;
    margin: 20rpx 0;
    height: 1.5em;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    color: #272b30;
}
.brief{
    font-size: 23rpx;
    height: 3em;
    margin-bottom: 25rpx;
    overflow: hidden;
    color: #34495e;
}
.info{
    display: flex;
    justify-content: space-between;
    font-size: 23rpx;
    color: #7f8c8d;
}