
.item navigator{
    display: flex;
    height: 240rpx;
    align-items: center;
    padding: 0 20rpx;
    box-sizing: border-box;
    border-bottom: 2rpx solid rgba(0, 0, 0, 0.1) ;
   
 }
 .left{
     width: 200rpx;
     height: 200rpx;
 }
 .left image{
     width: 100%;
     height: 100%;
 }
 .right{
     display: flex;
     box-sizing: border-box;
     
     padding: 0rpx 20rpx;
     flex-direction: column;
     justify-content: space-between;
     flex: 1;
     height: 80%;
     padding: 10rpx ;
     padding-top:0rpx ;
     
     
 }
 .title{
     
     text-align: justify;
     overflow: hidden;
     color: #535c68;
     font-weight: 600;
     font-size: 35rpx;
 }
 .info{
     display: flex;
     align-items: center;
     justify-content: space-between;
     font-size: 25rpx;
     color: #7f8c8d;
     flex-shrink: 0;
 }